package com.gestionfacture;

import javax.swing.*;
import java.awt.*;

// Classe pour le panneau de gestion des clients
public class ClientPanel extends JPanel {

    // Déclaration des éléments de l'interface
    private JTable tableClients; // Tableau pour afficher les clients
    private JTextField txtNom; // Champ pour le nom du client
    private JTextField txtPrenom; // Champ pour le prénom du client
    private JTextField txtTelephone; // Champ pour le téléphone du client
    private JButton btnAjouter; // Bouton pour ajouter un client
    private JButton btnModifier; // Bouton pour modifier un client
    private JButton btnSupprimer; // Bouton pour supprimer un client
    private JLabel lblNom; // Label pour "Nom"
    private JLabel lblPrenom; // Label pour "Prénom"
    private JLabel lblTelephone; // Label pour "Téléphone"

    // Constructeur
    public ClientPanel() {
        initializeComponents(); // Appelle la méthode pour créer les éléments
    }

    // Méthode pour créer tous les éléments du panneau
    private void initializeComponents() {
        setBounds(0, 0, 1482, 688); // Taille pour remplir mainPanel
        setBackground(Color.WHITE); // Fond blanc
        setLayout(null); // Positionnement manuel

        // Label pour "Nom"
        lblNom = new JLabel("Nom");
        lblNom.setBounds(20, 20, 100, 25); // Position et taille
        lblNom.setFont(new Font("Arial", Font.PLAIN, 12)); // Police
        add(lblNom);

        // Champ pour le nom
        txtNom = new JTextField();
        txtNom.setBounds(120, 20, 200, 25); // Position et taille
        txtNom.setFont(new Font("Arial", Font.PLAIN, 12)); // Police
        add(txtNom);

        // Label pour "Prénom"
        lblPrenom = new JLabel("Prénom");
        lblPrenom.setBounds(20, 60, 100, 25); // Position et taille
        lblPrenom.setFont(new Font("Arial", Font.PLAIN, 12)); // Police
        add(lblPrenom);

        // Champ pour le prénom
        txtPrenom = new JTextField();
        txtPrenom.setBounds(120, 60, 200, 25); // Position et taille
        txtPrenom.setFont(new Font("Arial", Font.PLAIN, 12)); // Police
        add(txtPrenom);

        // Label pour "Téléphone"
        lblTelephone = new JLabel("Téléphone");
        lblTelephone.setBounds(20, 100, 100, 25); // Position et taille
        lblTelephone.setFont(new Font("Arial", Font.PLAIN, 12)); // Police
        add(lblTelephone);

        // Champ pour le téléphone
        txtTelephone = new JTextField();
        txtTelephone.setBounds(120, 100, 200, 25); // Position et taille
        txtTelephone.setFont(new Font("Arial", Font.PLAIN, 12)); // Police
        add(txtTelephone);

        // Bouton "Ajouter"
        btnAjouter = new JButton("Ajouter");
        btnAjouter.setBounds(350, 20, 100, 30); // Position et taille
        btnAjouter.setBackground(Color.GREEN); // Fond vert
        btnAjouter.setForeground(Color.WHITE); // Texte blanc
        btnAjouter.setFont(new Font("Arial", Font.BOLD, 12)); // Police
        btnAjouter.setBorder(null); // Pas de bordure
        btnAjouter.addActionListener(e -> btnAjouter_Click()); // Action quand on clique
        add(btnAjouter);

        // Bouton "Modifier"
        btnModifier = new JButton("Modifier");
        btnModifier.setBounds(350, 60, 100, 30); // Position et taille
        btnModifier.setBackground(Color.BLUE); // Fond bleu
        btnModifier.setForeground(Color.WHITE); // Texte blanc
        btnModifier.setFont(new Font("Arial", Font.BOLD, 12)); // Police
        btnModifier.setBorder(null); // Pas de bordure
        btnModifier.addActionListener(e -> btnModifier_Click()); // Action quand on clique
        add(btnModifier);

        // Bouton "Supprimer"
        btnSupprimer = new JButton("Supprimer");
        btnSupprimer.setBounds(350, 100, 100, 30); // Position et taille
        btnSupprimer.setBackground(Color.RED); // Fond rouge
        btnSupprimer.setForeground(Color.WHITE); // Texte blanc
        btnSupprimer.setFont(new Font("Arial", Font.BOLD, 12)); // Police
        btnSupprimer.setBorder(null); // Pas de bordure
        btnSupprimer.addActionListener(e -> btnSupprimer_Click()); // Action quand on clique
        add(btnSupprimer);

        // Tableau pour afficher les clients
        String[] columns = {"ID", "Nom", "Prénom", "Téléphone"}; // Colonnes du tableau
        String[][] data = {{"", "", "", ""}}; // Données vides pour l'instant
        tableClients = new JTable(data, columns);
        JScrollPane scrollPane = new JScrollPane(tableClients);
        scrollPane.setBounds(20, 150, 1400, 500); // Position et taille
        add(scrollPane);
    }

    // Action pour le bouton "Ajouter"
    private void btnAjouter_Click() {
        // Code pour ajouter un client (à connecter à la base de données)
        JOptionPane.showMessageDialog(this, "Client ajouté (fonctionnalité à implémenter)!");
    }

    // Action pour le bouton "Modifier"
    private void btnModifier_Click() {
        // Code pour modifier un client (à connecter à la base de données)
        JOptionPane.showMessageDialog(this, "Client modifié (fonctionnalité à implémenter)!");
    }

    // Action pour le bouton "Supprimer"
    private void btnSupprimer_Click() {
        // Code pour supprimer un client (à connecter à la base de données)
        JOptionPane.showMessageDialog(this, "Client supprimé (fonctionnalité à implémenter)!");
    }
}