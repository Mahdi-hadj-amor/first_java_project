import java.awt.*;
import javax.swing.*;

public class MainWindow extends JFrame {
    public MainWindow() {
        // Définir la position et la taille de la fenêtre
        this.setBounds(100, 20, 400, 200);
        // Fermer l'application quand on clique sur la croix
        this.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        // Donner un titre à la fenêtre
        this.setTitle("Gestion des Factures");

        // Créer les labels (étiquettes)
        JLabel l1 = new JLabel("Menu Principal");

        // Créer les boutons
        JButton b1 = new JButton("Gérer les Articles");
        JButton b2 = new JButton("Gérer les Clients");
        JButton b3 = new JButton("Gérer les Factures");

        // Créer des panneaux pour organiser les éléments
        JPanel p1 = new JPanel();
        p1.setLayout(new FlowLayout());
        p1.add(l1);

        JPanel p2 = new JPanel();
        p2.setLayout(new FlowLayout());
        p2.add(b1);

        JPanel p3 = new JPanel();
        p3.setLayout(new FlowLayout());
        p3.add(b2);

        JPanel p4 = new JPanel();
        p4.setLayout(new FlowLayout());
        p4.add(b3);

        // Panneau pour organiser les boutons
        JPanel p5 = new JPanel();
        p5.setLayout(new GridLayout(1, 3));
        p5.add(p2);
        p5.add(p3);
        p5.add(p4);

        // Panneau principal qui contient tout
        JPanel p6 = new JPanel();
        p6.setLayout(new GridLayout(2, 1));
        p6.add(p1);
        p6.add(p5);

        // Ajouter le panneau principal à la fenêtre
        this.setLayout(new FlowLayout());
        this.add(p6);

        // Ajouter une action au bouton "Gérer les Articles"
        b1.addActionListener(new java.awt.event.ActionListener() {
            public void actionPerformed(java.awt.event.ActionEvent evt) {
                new ArticleWindow();
            }
        });

        // Ajouter une action au bouton "Gérer les Clients"
        b2.addActionListener(new java.awt.event.ActionListener() {
            public void actionPerformed(java.awt.event.ActionEvent evt) {
                new ClientWindow();
            }
        });

        // Ajouter une action au bouton "Gérer les Factures"
        b3.addActionListener(new java.awt.event.ActionListener() {
            public void actionPerformed(java.awt.event.ActionEvent evt) {
                new FactureWindow();
            }
        });

        // Afficher la fenêtre
        this.show();
    }
}